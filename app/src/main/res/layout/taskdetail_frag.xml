<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.example.android.architecture.blueprints.todoapp.taskdetail.TaskDetailViewModel" />

        <!--<variable-->
            <!--name="contactViewModel"-->
            <!--type="com.example.android.architecture.blueprints.todoapp.contacts.ContactsViewModell" />-->

        <variable
            name="listener"
            type="com.example.android.architecture.blueprints.todoapp.taskdetail.TaskDetailUserActionsListener" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.example.android.architecture.blueprints.todoapp.ScrollChildSwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:onRefreshListener="@{viewmodel::onRefresh}"
            app:refreshing="@{viewmodel.dataLoading}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:visibility="@{viewmodel.isDataAvailable ? View.GONE : View.VISIBLE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:visibility="@{viewmodel.isDataAvailable ? View.VISIBLE : View.GONE}">

                    <!-- android:paddingTop specified to temporarily work around -->
                    <!-- https://github.com/robolectric/robolectric/issues/4588 -->
                    <LinearLayout
                        android:id="@+id/task_detail_title_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="20">
                    <TextView
                        android:id="@+id/task_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp"
                        android:layout_weight="18"
                        android:text="@{viewmodel.task.title}"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <CheckBox
                        android:id="@+id/task_detail_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_toLeftOf="@id/task_detail_favorite"
                        android:layout_marginRight="5dp"
                        android:checked="@{viewmodel.completed}"
                        android:onClick="@{(view) -> listener.onCompleteChanged(view)}"/>

                    <CheckBox
                        android:id="@+id/task_detail_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star"
                        android:checked="@{viewmodel.favorite}"
                        android:onClick="@{(view) -> listener.onFavoriteChanged(view)}"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/task_detail_description_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_detail_title_container"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="Description"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/task_detail_description_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        android:paddingTop="5dp"
                        android:layout_below="@id/task_detail_description_header"
                        card_view:cardBackgroundColor="@color/colorGrey"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:id="@+id/task_detail_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@{viewmodel.task.description}"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/task_due_date_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_detail_description_container"
                        android:paddingTop="20dp"
                        android:text="Date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/task_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_due_date_header"
                        android:hint="@string/due_date_hint"
                        android:onClick="@{(view) -> listener.onDueDateChanged(view)}"
                        android:paddingTop="2dp"
                        android:text="@{viewmodel.dueDate}"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <View
                        android:id="@+id/seperator_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/task_due_date"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/task_time_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/seperator_due_date"
                        android:paddingTop="10dp"
                        android:text="Time"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_time_header"
                        android:hint="@string/time_hint"
                        android:onClick="@{(view) -> listener.onTimeChanged(view)}"
                        android:paddingTop="2dp"
                        android:text="@{viewmodel.time}"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <View
                        android:id="@+id/separator_time"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/task_time"
                        android:background="@color/colorAccent" />

                    <LinearLayout
                        android:id="@+id/task_contacts_header_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_time"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/task_contacts_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingTop="20dp"
                            android:text="Contacts"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryDark" />


                        <Button
                            android:id="@+id/add_contact_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.2"
                            android:background="@drawable/ic_add"
                            android:backgroundTint="@color/colorGrey"
                            android:gravity="right"
                            android:onClick="@{(view) -> listener.onAddContactClicked(view)}"
                            android:paddingTop="20dp" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/contact_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <!--app:items="@{contactViewModel.items}"-->


                    <View
                        android:id="@+id/separator_contacs"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/contact_list"
                        android:background="@color/colorPrimaryDark"/>


                </RelativeLayout>
            </LinearLayout>
        </com.example.android.architecture.blueprints.todoapp.ScrollChildSwipeRefreshLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_edit"
            app:fabSize="normal"
            app:layout_anchor="@id/refresh_layout"
            app:layout_anchorGravity="bottom|right|end" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
